<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane prefHeight="492.0" prefWidth="517.0" style="-fx-background-color: linear-gradient(to bottom, #4facfe, #00f2fe);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo2.LoginController">
    <!-- Center the content within the Pane -->
    <VBox alignment="CENTER" layoutX="100" layoutY="50" spacing="20.0">
        <children>
            <!-- Title Label -->
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Library Management System" textFill="WHITE">
                <effect>
                    <DropShadow color="#000000" />
                </effect>
                <VBox.margin>
                    <Insets top="20.0" />
                </VBox.margin>
            </Label>

            <!-- Role ChoiceBox -->
            <ChoiceBox fx:id="roleChoiceBox" prefHeight="35.0" prefWidth="250.0" style="-fx-background-color: white; -fx-border-radius: 10;" />

            <!-- Username Label and TextField -->
            <Label style="-fx-font-size: 16px; font-weight: bold;" text="Username" textFill="WHITE">
                <VBox.margin>
                    <Insets left="20.0" top="10.0" />
                </VBox.margin>
            </Label>
            <TextField fx:id="TxtFieldUsername" prefHeight="35.0" prefWidth="300.0" style="-fx-background-radius: 10; -fx-border-color: white; -fx-border-radius: 10;" />

            <!-- Password Label and PasswordField -->
            <Label style="-fx-font-size: 16px;" text="Password" textFill="WHITE">
                <VBox.margin>
                    <Insets left="20.0" top="10.0" />
                </VBox.margin>
            </Label>
            <PasswordField fx:id="TxtFieldPassword" prefHeight="35.0" prefWidth="300.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: white;" />

            <!-- Login and Sign Up Buttons -->
            <HBox alignment="CENTER" spacing="20.0">
                <VBox.margin>
                    <Insets top="20.0" />
                </VBox.margin>
                <Button  fx:id="loginButton" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #ff8c00; -fx-background-radius: 30;" text="Login" textFill="WHITE" >
                    <font>
                        <Font name="Arial Bold" size="16.0" />
                    </font>
                    <effect>
                        <DropShadow color="#000000" />
                    </effect>
                </Button>
                <Button  fx:id="signupButton" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #ff8c00; -fx-background-radius: 30;" text="Sign Up" textFill="WHITE" >
                    <font>
                        <Font name="Arial Bold" size="16.0" />
                    </font>
                    <effect>
                        <DropShadow color="#000000" />
                    </effect>
                </Button>
            </HBox>
        </children>
    </VBox>
</Pane>
